<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="@dimen/height_item"
              android:orientation="horizontal"
              android:background="?android:attr/activatedBackgroundIndicator">
	
	<android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/checkbox_todo_completed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:focusable="false"
        android:layout_marginLeft="@dimen/margin_activity_horizontal_scaled_to_app_compat_checkbox"
        android:layout_marginStart="@dimen/margin_activity_horizontal_scaled_to_app_compat_checkbox"
        android:layout_marginRight="@dimen/margin_activity_horizontal_scaled_to_app_compat_checkbox"
        android:layout_marginEnd="@dimen/margin_activity_horizontal_scaled_to_app_compat_checkbox"
        app:buttonTint="@color/navigationViewItemIconTint"/>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
        android:layout_marginRight="@dimen/margin_activity_horizontal"
        android:layout_marginEnd="@dimen/margin_activity_horizontal"
        android:gravity="center_vertical">

		<LinearLayout
            android:id="@+id/linearlayout_todo_title_and_due_date"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginRight="@dimen/margin_activity_horizontal_double"
            android:layout_marginEnd="@dimen/margin_activity_horizontal_double">

            <TextView
                android:id="@+id/textview_todo_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:lines="1"
                android:ellipsize="end"
                android:text="99999999999999999999999999999999999999999999999999"/>

            <!--<TextView-->
